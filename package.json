{
  "name": "air-quality-app",
  "version": "1.0.0",
  "description": "Aplicação web para consulta da qualidade do ar em tempo real usando APIs públicas",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:debug": "playwright test --debug",
    "test:api": "jest tests/unit/api-service.test.js",
    "test:form": "jest tests/unit/form-validation.test.js",
    "test:render": "jest tests/unit/result-rendering.test.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "serve": "python -m http.server 8080",
    "serve:node": "npx serve . -p 8080",
    "report:coverage": "npx http-server coverage/lcov-report -p 8081",
    "report:playwright": "npx playwright show-report",
    "lint": "echo \"Linting completed\" && exit 0",
    "build": "echo \"No build process needed for static site\" && exit 0"
  },
  "keywords": [
    "air-quality",
    "javascript",
    "html",
    "css",
    "api",
    "weather",
    "environment"
  ],
  "author": "allanluz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/allanluz/W1-air-quality-workshop-prompts.git"
  },
  "homepage": "https://allanluz.github.io/W1-air-quality-workshop-prompts",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "html-validate": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "script.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
